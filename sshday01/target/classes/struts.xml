<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 匹配demo路径使用该package进行处理 -->
	<package name="demo" namespace="/demo" extends="struts-default">
		<!-- 匹配集团请求/demo/hello.action
			 使用HelloAction类进行处理
		 -->
		<action name="hello" class="cn.tedu.action.HelloAction">
			<!-- 匹配execute方法返回的结果:success -->
			<result name="success">
				/WEB-INF/msg.jsp
			</result>
		</action>
	</package>
	 <package name="message" namespace="/message" extends="struts-default">
		<action name="loginForm" >
			<result>
			/WEB-INF/login.jsp
			</result>
		</action>
		<action name="login" class="cn.tedu.action.LoginAction">
			<result name="success">
				/WEB-INF/msg.jsp
			</result>
		</action> 
		
	</package>
	 <package name="user" namespace="/user" extends="struts-default">
		<action name="loginForm">
			<result>/WEB-INF/login2.jsp</result>
		</action>
		<action name="login" class="cn.tedu.action.UserLoginAction">
			<result name="success">
				/WEB-INF/msg.jsp
			</result>
		</action>
	</package>
	 <package name="login" namespace="/login" extends="struts-default">
	 	<action name="loginForm">
	 		<result>/WEB-INF/loginForm.jsp</result>
	 	</action>
	 	<action name="login2" class="cn.tedu.action.Login2Action">
	 		<result name="success">/WEB-INF/OK.jsp</result>
	 		<result name="error">/WEB-INF/loginForm.jsp</result>
	 	</action>
	 </package>
	
	
	
	
	
	
	
	
</struts>